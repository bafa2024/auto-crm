{
    "name": "autocrm/autodial-pro",
    "description": "AutoDial Pro CRM - Enterprise Auto Dialer Solution",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "phpoffice/phpspreadsheet": "^4.4",
        "phpmailer/phpmailer": "^6.9"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Router\\": "router/",
            "Controllers\\": "controllers/",
            "Models\\": "models/",
            "Services\\": "services/",
            "Utils\\": "utils/"
        },
        "files": [
            "config/config.php",
            "config/cloud.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
