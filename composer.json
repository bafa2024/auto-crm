{
    "name": "autocrm/autodial-pro",
    "description": "AutoDial Pro CRM - Enterprise Auto Dialer Solution",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4|^8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-json": "*",
        "phpmailer/phpmailer": "^6.8",
        "phpoffice/phpspreadsheet": "^1.29",
        "firebase/php-jwt": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Router\\": "router/",
            "Controllers\\": "controllers/",
            "Models\\": "models/",
            "Services\\": "services/",
            "Utils\\": "utils/"
        },
        "files": [
            "config/config.php",
            "config/cloud.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}