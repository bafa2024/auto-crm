# Application Configuration
APP_NAME="AutoDial CRM"
APP_ENV=development
APP_URL=http://localhost
APP_DEBUG=true
APP_TIMEZONE=UTC

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=autocrm
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4
DB_SSL_CA=
DB_SSL_VERIFY=false

# Security
JWT_SECRET=your-secret-key-change-this-in-production
BCRYPT_COST=12
SESSION_LIFETIME=3600
SESSION_NAME=autocrm_session

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls
SMTP_FROM_EMAIL=noreply@autocrm.com
SMTP_FROM_NAME="AutoDial Pro"

# Email Rate Limiting
EMAIL_RATE_LIMIT=100
EMAIL_BATCH_SIZE=50

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_TYPES=csv,xlsx,xls
UPLOAD_PATH=uploads/

# API Configuration
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Cache Configuration
CACHE_ENABLED=true
CACHE_DURATION=3600
CACHE_DRIVER=file
REDIS_URL=

# AWS Configuration (if using AWS)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_EXECUTION_ENV=
CLOUDWATCH_LOG_GROUP=
CLOUDWATCH_LOG_STREAM=

# Azure Configuration (if using Azure)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_STORAGE_CONTAINER=uploads
AZURE_CACHE_CONNECTION=
AZURE_LOG_WORKSPACE_ID=
AZURE_LOG_PRIMARY_KEY=

# Google Cloud Configuration (if using GCP)
GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=
GCS_BUCKET=
DB_CONNECTION_NAME=

# Heroku Configuration (if using Heroku)
CLEARDB_DATABASE_URL=
JAWSDB_URL=

# Logging
LOG_LEVEL=debug
LOG_PATH=logs/

# Twilio Configuration (for SMS/Voice)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Timezone and Locale
DEFAULT_TIMEZONE=UTC
DEFAULT_LOCALE=en_US

# Pagination
DEFAULT_PAGE_SIZE=25
MAX_PAGE_SIZE=100

# Development/Debug
SHOW_ERRORS=true
ERROR_REPORTING=E_ALL